<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.midprj.accounts.service.AccountsMapper">
<resultMap type="com.midprj.accounts.service.AccountsVO"
	id="AccountsMap">
	<id property="fintech_use_num" column="fintech_use_num" />
	<result property="bank_code_std" column="bank_code_std" />
	<result property="bank_name" column="bank_name" />
	<result property="account_num_masked"
		column="account_num_masked" />
	<result property="account_holder_name"
		column="account_holder_name" />
	<result property="account_state" column="account_state" />
</resultMap>


<select id="selectAccounts" resultMap="AccountsMap">
	SELECT * FROM ACCOUNT
</select>

<select id="selectAccountInfo" parameterType="com.midprj.accounts.service.AccountsVO" resultType="Integer">
	SELECT COUNT(*)
	FROM ACCOUNT
	WHERE FINTECH_USE_NUM = #{fintech_use_num}
</select>


<insert id="insertAccounts"
	parameterType="com.midprj.accounts.service.AccountsVO">
	INSERT INTO ACCOUNT
	VALUES(#{fintech_use_num},#{bank_code_std},#{bank_name},#{account_num_masked},#{account_holder_name},#{account_state})
</insert>
	
</mapper>	